<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Title>Horse.Jockey</Title>
        <AssemblyVersion>6.8.6</AssemblyVersion>
        <FileVersion>6.8.6</FileVersion>
        <PackageVersion>6.8.6</PackageVersion>
        <Authors>Mehmet Helvacıköylü;Emre Hızlı</Authors>
        <Description>Administration Portal for Horse Messaging</Description>
        <PackageProjectUrl>https://github.com/horse-framework/jockey</PackageProjectUrl>
        <PackageLicenseUrl>https://github.com/horse-framework/jockey/blob/master/LICENSE</PackageLicenseUrl>
        <RepositoryUrl>https://github.com/horse-framework/jockey</RepositoryUrl>
        <LangVersion>default</LangVersion>
        <TargetFrameworks>net6.0;net7.0;net8.0</TargetFrameworks>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
        <DocumentationFile>bin\Release\Horse.Jockey.xml</DocumentationFile>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
        <DocumentationFile>bin\Debug\Horse.Jockey.xml</DocumentationFile>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Enums.NET" Version="4.0.2" />
        <PackageReference Include="Horse.Core" Version="6.6.0"/>
        <PackageReference Include="Horse.Messaging.Server" Version="6.8.7" />
        <PackageReference Include="Horse.Mvc" Version="6.6.1" />
        <PackageReference Include="Horse.Mvc.Auth.Jwt" Version="6.6.1" />
        <PackageReference Include="Horse.Protocols.Http" Version="6.6.1" />
        <PackageReference Include="Horse.Server" Version="6.6.0"/>
        <PackageReference Include="Horse.WebSocket.Protocol" Version="6.8.1" />
        <PackageReference Include="Horse.WebSocket.Server" Version="6.8.1" />
    </ItemGroup>

