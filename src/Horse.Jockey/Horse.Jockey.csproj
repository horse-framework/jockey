<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Title>Horse.Jockey</Title>
        <AssemblyVersion>6.6.3</AssemblyVersion>
        <FileVersion>6.6.3</FileVersion>
        <PackageVersion>6.6.3</PackageVersion>
        <Authors>Mehmet Helvacıköylü;Emre Hızlı</Authors>
        <Description>Administration Portal for Horse Messaging</Description>
        <PackageProjectUrl>https://github.com/horse-framework/jockey</PackageProjectUrl>
        <PackageLicenseUrl>https://github.com/horse-framework/jockey/blob/master/LICENSE</PackageLicenseUrl>
        <RepositoryUrl>https://github.com/horse-framework/jockey</RepositoryUrl>
        <LangVersion>10</LangVersion>
        <TargetFrameworks>net6.0;net7.0</TargetFrameworks>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
        <DocumentationFile>bin\Release\Horse.Jockey.xml</DocumentationFile>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
        <DocumentationFile>bin\Debug\Horse.Jockey.xml</DocumentationFile>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Enums.NET" Version="4.0.1" />
        <PackageReference Include="Horse.Core" Version="6.5.0" />
        <PackageReference Include="Horse.Messaging.Server" Version="6.7.0-beta.2" />
        <PackageReference Include="Horse.Mvc" Version="6.5.1" />
        <PackageReference Include="Horse.Mvc.Auth.Jwt" Version="6.5.1" />
        <PackageReference Include="Horse.Protocols.Http" Version="6.5.1" />
        <PackageReference Include="Horse.Server" Version="6.5.0" />
        <PackageReference Include="Horse.WebSocket.Protocol" Version="6.5.11" />
        <PackageReference Include="Horse.WebSocket.Server" Version="6.5.11" />
    </ItemGroup>

    <ItemGroup>
        <Folder Include="Web" />
    </ItemGroup>

</Project>
